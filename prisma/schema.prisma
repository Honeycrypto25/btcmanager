generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(USER)
  
  // 2FA Fields
  twoFactorSecret     String?
  twoFactorEnabled    Boolean   @default(false)

  // OTP Login Fields
  loginOtp            String?
  loginOtpExpires     DateTime?
  
  accounts      Account[]
  sessions      Session[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum UserRole {
  ADMIN
  USER
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model BitcoinWallet {
  id           String    @id @default(cuid())
  name         String
  address      String    @unique
  transactions BitcoinTransaction[]
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model BitcoinTransaction {
  id           String    @id @default(cuid())
  txid         String    
  amount       Float     // BTC amount
  priceAtTime  Float     // Historical price at time of tx
  timestamp    DateTime
  
  walletId     String
  wallet       BitcoinWallet @relation(fields: [walletId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime  @default(now())

  @@unique([txid, walletId])
}
